{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build",
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "types": ["@withfig/autocomplete-types"]
  },
  "include": ["./src/**/*", "dangerfile.ts"]
}
